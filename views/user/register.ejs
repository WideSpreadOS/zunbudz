<style>
    .input-form {
        width: 90%;
    }
</style>


    <div class="input-form">
        <div class="input-form-title">
            <h5>Register</h5>
        </div>
        <form action="/user/register" method="POST">
                <div class="input-group">
                        <input type="name" id="fname" name="fname" class="input-control login-input"
                            placeholder="First Name" value="<%= typeof name != 'undefined' ? fname : '' %>" />
        
                </div>
                <div class="input-group">
                        <input type="name" id="lname" name="lname" class="input-control login-input"
                            placeholder="Last Name" value="<%= typeof name != 'undefined' ? lname : '' %>" />
        
                </div>
                <div class="input-group">
                        <input type="email" id="email" name="email" class="input-control login-input" placeholder="Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>" />
        
                </div>
                <div class="input-group">
                        <input type="password" id="password" name="password" class="input-control login-input"
                            placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
        
                </div>
                <div class="input-group">
                        <input type="password" id="password2" name="password2" class="input-control login-input"
                            placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
            <button type="submit">Register</button>
        </form>
    </div>

    <div class="site-link-helper">
        <p>Already have an account? <a href="/user/login">Login Here</a></p>
    </div>

<div class="site-logo-big">
    <img src="/images/logo_1a1a1c.png" alt="">
</div>