<style>
    .input-form {
        width: 90%;
    }
</style>


<div class="input-form">
    <div class="input-form-title">
        <h5>Login</h5>
    </div>
    <form action="/user/login" method="POST">
        <div class="input-group">
            <input type="email" id="email" name="email" class="input-control login-input" placeholder="Enter your email" />
        </div>
        <div class="input-group">
            <input type="password" id="password" name="password" placeholder="Enter your password" />
        </div>
        <button type="submit">Login</button>
    </form>
</div>


<div class="site-link-helper">
    <p>Need an account? <a href="/user/register">Register Here</a></p>
</div>


<div class="site-logo-big">
