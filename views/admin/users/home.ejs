<style>

.user-list-container {
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.user-container {
    background: #ecf0f3;
    width: 80%;
    margin-bottom: 20px;
    padding: 5px;
    border-radius: 8px;
    box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
}
.user-container-header {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-between;
}
.user-name {
    width: 90%;
    overflow: hidden;
}
.user-name p {
    max-width: 100%;
}


.user-security {
    width: 15%;
    height: 100%;
}
.user-container p {
    font-size: 1.2rem;
    padding: 8px;
}
.user-container a {
    padding: 8px;
    text-decoration: none;
    color: lightskyblue;
    margin-bottom: 10px;
}

.user-container-button {
    width: 50%;
    margin: 0 auto;
    margin-top: 20px;
    text-align: center;
    margin-bottom: 10px;
    background: #ecf0f3;
    border-radius: 6px;
    box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
}
.user-container-button button {
    background: #ecf0f3;
    width: 100%;
    outline: none;
    border: none;
    border-radius: 6px;
}
.user-container-button a {
    width: 100%;
}



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>
<% if (user.admin===true) { %>


<%- include('../../partials/menus/admin-nav.ejs'); %>
<div class="admin-container">
    <div class="page-title">
        <h1>
            <%= page %>
        </h1>
    </div>


    <div class="user-list-container">
        <% users.forEach(function(singleUser) { %>
            <div class="user-container">
                <div class="user-container-header">
                    <div class="user-name">
                        <p><%= singleUser.fname %> <%= singleUser.lname %></p>
                    </div>
                    <div class="user-security">
                        <% if (singleUser.admin===false) { %>
                            <a href="/admin/users/security-level/admin/<%= singleUser.id %>"><i style="color: red; font-size: 1.5rem;" class="fas fa-user-shield"></i></a>
                            <% } else { %>
                                <% if (singleUser.id === '61ead601b09e2fb3e68d0f36') { %>
                                    <a href="#"><i style="color: lightskyblue; font-size: 1.5rem;" class="fas fa-user-shield"></i></a>
                                <% } else { %>
                                    <a href="/admin/users/security-level/none/<%= singleUser.id %>"><i style="color: green; font-size: 1.5rem;" class="fas fa-user-shield"></i></a>
                                <% } %>
                        <% } %>
                    </div>
                </div>
                <a href="mailto:<%= singleUser.email %>"><%= singleUser.email %></a>

                <div class="user-container-button">
                    <button><a href="/admin/users/details/this-is-for-security-abcdef-zyxwvu/<%= singleUser.id %>">Details</a></button>
                </div>
            </div>
        <% }) %>
    </div>

</div>



    
<% } else { %>
    <%- include('../../partials/pages/404.ejs'); %>
    
<% } %>