<style>
    .search-invoices {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        width: 90%;
        max-width: 350px;
        margin: 0 auto;
        margin-bottom: 30px;
    }
    .search-invoices form {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        box-shadow: -8px -4px 8px 0px #fff, 8px 4px 12px 0px #d1d0e6;
        padding: 15px;
        border-radius: 12px;
    }
    .search-invoices input {
        box-shadow: inset -4px -2px 4px 0px #fff, inset 2px 3px 6px 0px #d1d0e6;
        padding: 8px;
        border-radius: 6px;
        color: lightskyblue;
        outline: none;
        border: none;
        background: #ecf0f3;
        margin-left: 10px;
        width: 80%;
    }
    .search-invoices button {
        box-shadow: -8px -4px 8px 0px #fff, 8px 4px 12px 0px #d1d0e6;
        padding: 8px;
        border-radius: 6px;
        color: lightskyblue;
        outline: none;
        border: none;
        background: #ecf0f3;
        margin-left: 10px;
    }


    .user-details-container {
        width: 80%;
        background: #ecf0f3;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
        border-radius: 16px;
        margin: 0 auto;
        margin-bottom: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .user-details-container h5 {
        padding: 12px;
        margin-bottom: 5px;
        font-family: 'Rock Salt', cursive;
        color: lightskyblue;
        font-size: 1.2rem;
    }

    .user-details-link {
        width: 80%;
        background: #ecf0f3;
        box-shadow: 4px 4px 6px #d1d9e6, -4px -4px 6px #ffffff;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: center;
        padding: 10px;
    }

    .user-details-link a {
        padding: 10px;
        color: lightskyblue;
        text-decoration: none;
    }



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>

<% if (user.admin===true) { %>

<%- include('../../partials/menus/admin-nav.ejs'); %>
<div class="admin-container">

<div class="page-title">
    <h1>
        Invoice Home
    </h1>
</div>

<div class="search-invoices">
    <form action="/admin/invoices/search" method="post">
        <input type="text" name="order_id" placeholder="Search Orders By ID">
        <button type="submit">Search</button>
    </form>
</div>


<div class="user-details-container">
    <h5>Orders In/Out</h5>
    <div class="user-details-link">
        <a href="/admin/invoices/new">New Orders</a>
    </div>
    <div class="user-details-link">
        <a href="/admin/invoices/shipped/all">Shipped Orders</a>
    </div>
</div>
</div>


<% } else { %>
    <%- include('../../partials/pages/404.ejs'); %>
    
<% } %>