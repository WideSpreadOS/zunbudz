<style>
    .no-current-raffle {
        text-align: center;
        padding: 20px;
    }
    .no-current-raffle p {
        font-size: 1.4rem;
        font-weight: bold;
    }
       .ticket {
        box-shadow: 4px 4px 6px #d1d9e6, -4px -4px 6px #ffffff;
        border-radius: 8px;
        margin: 0 auto;
        margin-bottom: 15px;
        width: 80%;
        padding: 10px;
        font-size: 1.3rem;
    }

    .create-raffle {
        width: 90%;
        margin: 0 auto;
        margin-bottom: 30px;
        text-align: center;
        background: #ecf0f3;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
        border-radius: 16px;
        padding-top: 10px;
        padding-bottom: 10px;
        
    }
    .create-raffle a {
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem;
        color: lightskyblue;
        text-decoration: none;
        padding: 10px;
        width: 100%;
        text-align: center;
    }

    .hold-raffle-drawing {
        width: 90%;
        margin: 0 auto;
        margin-bottom: 30px;
        text-align: center;
        background: #ecf0f3;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
        border-radius: 16px;
        padding-top: 10px;
        padding-bottom: 10px;
        
    }
    .hold-raffle-drawing a {
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem;
        color: lightskyblue;
        text-decoration: none;
        padding: 10px;
        width: 100%;
        text-align: center;
    }

    .current-raffle-container {
        margin-bottom: 30px;
    }
    .raffle-item {
        margin-bottom: 30px;
        text-align: center;
    }
    .raffle-item-header h2 {
        font-size: 2rem;
    }
    .raffle-item-header h5 {
        font-size: 1.4rem;
    }
    .raffle-item-header img {
        max-width: 90%;
        max-height: 300px;
        border-radius: 16px;
        margin-top: 15px;
        margin-bottom: 15px;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
    }
    .raffle-item-body p {
        font-size: 1.2rem;
    }
    .unclaimed-raffles-container {
        width: 90%;
        margin: 0 auto;
        margin-top: 50px;
    }
    .unclaimed-raffles-header {
        font-size: 1.5rem;    
        color: lightskyblue;
        margin-bottom: 15px;
        text-align: center;
    }
    .unclaimed-raffle {
        background: #ecf0f3;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
        border-radius: 16px;
        margin-bottom: 30px;
        padding: 10px;
    }
    .id-data {
        text-align: center;
        border-bottom: solid 1px lightskyblue;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }
    .id-data h5 {
        font-size: 1.2rem;
        font-weight: bold;
        padding: 8px;
    }
    .winner-data {
        padding-top: 10px;
        
        border-bottom: solid 1px lightskyblue;
        padding-bottom: 10px;
        margin-bottom: 10px;
        
    }
    .winner-data h5 {
        text-align: center;
        font-size: 1.2rem;
        font-weight: bold;
    }
    .winner-data p {
        padding: 8px;
    }
    .winner-data a {
        text-decoration: none;
        color: lightskyblue;
    }
    .item-data {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        text-align: center;
        padding-top: 10px;
    }
    .item-data h6 {
        font-size: 1.2rem;
        font-weight: bold;
    }
    .item-data p {
        padding: 8px;
    }
    .item-data a {
        color: lightskyblue;
        text-decoration: none;
    }



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>

<% if (user.admin===true) { %>


<%- include('../partials/menus/admin-nav.ejs'); %>
    <div class="admin-container">
<div class="page-title">
    <h1><%= page %></h1>
</div>

<div class="go-back-button">
    <a href="/admin">Back to Admin Dashboard</a>
</div>

<% if (currentRaffle.raffle_draw === true) { %>
    <div class="create-raffle">
        <a href="/admin/raffle/new">Create New Raffle</a>
    </div>
<% } else { %>
    <span style="display: none;"></span>
<% } %>
<% if (currentProfit < 0) { %>
    <p style="text-align: center; margin-bottom: 30px;">You haven't turned a profit yet.</p>
<% } else { %>
<div class="hold-raffle-drawing">
    <a href="/admin/raffle/drawing">Get Winner</a>
</div>
<% } %>
<div class="current-raffle-container">
<% if (currentRaffle.raffle_draw === true) { %>

    <div class="no-current-raffle">
        <p>You may start a new raffle.</p>
    </div>
<% } else { %>
<div class="raffle-item">
    <div class="raffle-item-header">
        <h2><%= currentRafflePrize.manufacturer.name %></h2>
        <h5><%= currentRafflePrize.name %></h5>
        <img src="<%= currentRafflePrize.main_image %>" alt="">

    </div>
    <div class="raffle-item-body">
        <p>Ticket Price: $<%= currentRaffle.ticket_price %>/ea</p>
        <p>Tickets Sold: <%= tickets.length %>/<%= currentRaffle.total_tickets %></p>
        <p>Total Current Profit: 
            <% if (currentProfit < 0) { %>
                <span style="color: red;">$<%= currentProfit %></span>
            <% } else { %>
                <span style="color: green;">$<%= currentProfit %></span>
            <% } %>
        </p>
    </div>
</div>


<div class="current-raffle-tickets">
    <ol>
        <% tickets.forEach(function(ticket) { %>
            <div class="ticket">
                <li>
                    <p><%= ticket.ticket_holder.fname %> <%= ticket.ticket_holder.lname %></p>
                    <p><%= ticket.id %></p>
                </li>
            </div>
        <% }) %>
    </ol>

</div>

<% } %>

</div>



<div class="unclaimed-raffles-container">
    <div class="unclaimed-raffles-header">
        <h3>Unclaimed Raffle Prizes</h3>
    </div>
    <% raffles.forEach(function(raffle) { %>
        
        <% if (raffle.raffle_draw === true) { %>
        <div class="unclaimed-raffle">
            <div class="id-data">
                <h5>Raffle</h5>
                <p>Raffle ID: <%= raffle.id %></p>
                <p>Ticket ID: <%= raffle.winning_ticket %></p>
            </div>
            <div class="winner-data">
                <h5>Winner</h5>
                <p>Name: <%= raffle.winning_user.fname %> <%= raffle.winning_user.lname %></p>
                <p>User ID: <%= raffle.winning_user.id %></p>
                <p>Email: <a href="<%= raffle.winning_user.email %>"><%= raffle.winning_user.email %> <i class="far fa-envelope"></i></a></p>
                
            </div>
            <div class="item-data">
                <h6><%= raffle.raffle_product.manufacturer.name %></h6>
                <p><%= raffle.raffle_product.name %></p>
                <p><a href="/admin/products/details/<%= raffle.raffle_product.id %>">Go To Product</a></p>

            </div>
        </div>
    <% } else { %>
        <span style="display: none;">In Progress</span>
    <% } %>
    <% }) %>
</div>


    </div>

    
<% } else { %>
    <%- include('../partials/pages/404.ejs'); %>
    
<% } %>