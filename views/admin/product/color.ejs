<style>



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>
<% if (user.admin===true) { %>


<%- include('../../partials/menus/admin-nav.ejs'); %>
    <div class="admin-container">
        <div class="page-title">
            <h1>
                <%= page %>
            </h1>
            <div style="background: <%= color %>; width: 50%; height: 50px; margin: 0 auto;" class="color"></div>
        </div>
        <%- include('../../partials/filters/admin-products.ejs'); %>

            <div class="admin-table">
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Item</th>
                            <th>Details</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(function(product) { %>
                            <tr>
                                <td>
                            <% if (!product.main_image) { %>
                                    <img style="filter: drop-shadow(0 0 2px rgba(235, 89, 57, 1));width: 75px; border-radius: 8px; opacity: 0.75;" src="https://th.bing.com/th/id/R.b9f8fb5b4ae645af922016c1fef19a9e?rik=n6ijNdvUdInMAg&riu=http%3a%2f%2fcdn.onlinewebfonts.com%2fsvg%2fdownload_546302.png&ehk=esufhR2EMnshhANfFAucbBI2jDIqTIjS20AfIBENF9M%3d&risl=&pid=ImgRaw&r=0" />
                            <% } else { %>
                                <img class="admin-table-image" src="<%= product.main_image %>" />
                            <% } %>
                                </td>
                                <td>
                                    <p style="font-size: 1.1rem; color: rgba(235, 89, 57, 1);">
                                        <%= product.manufacturer.name %>
                                    </p>
                                    <p>
                                        <%= product.name %>
                                    </p>
                                </td>
                                <td>
                                    <div class="item-card-button"><a href="/admin/products/details/<%= product.id %>"><i
                                                class="far fa-eye"></i></a></div>
                                </td>
                                <td>
                                    <div class="item-card-button"><a href="/admin/products/edit/<%= product.id %>"><i
                                                class="far fa-edit"></i></a></div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>



    </div>

    

    
<% } else { %>
    <%- include('../../partials/pages/404.ejs'); %>
    
<% } %>