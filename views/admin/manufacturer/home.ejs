<style>
        .item-card-container {
        width: 100%;
        margin: 0 auto;
        justify-content: space-between;
        overflow-x: hidden;
    }
    .item-card {
        width: 90%;
        margin: 0 auto;
        margin-bottom: 30px;
    }
    .item-card-data-subheader a {
        text-decoration: none;
        color: #fff;
    }
    .item-card-main-image {
        max-width: 85%;
        height: auto;
        margin: 0 auto;
        min-height: 100px;
        padding: 8px;
    }
    .item-card-main-image img{
        height: auto;
        min-height: 100px;
        filter: drop-shadow(0 0 5px lightskyblue);
    }

    .company-actions {
        width: 90%;
        margin: 0 auto;
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
    }
    .company-actions a {
        font-size: 1.5rem;
        text-decoration: none;
        padding: 10px;
        box-shadow: 4px 4px 4px 0px #d1d9e6, -4px -4px 4px 0px #fff;
        border-radius: 16px;
        width: 30%;
        color: lightskyblue;
    }



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>
<% if (user.admin===true) { %>


<%- include('../../partials/menus/admin-nav.ejs'); %>


<div class="admin-container">

<div class="page-title">
    <h1>
        <%= page %>
    </h1>
</div>



<div class="input-form" id="shoeForm">
    <div class="input-form-title">
        <h5>Add New Company</h5>
    </div>
    <form action="/admin/manufacturers/add" method="post">

        <div class="input-group">
            <input type="text" name="name" placeholder="Name of Company">
        </div>
      
        <div class="input-group">
            <input type="text" name="main_url" placeholder="Company Main URL">
        </div>
      
        <div class="input-group">
            <input type="text" name="logo" placeholder="Companys Logo URL">
        </div>
      
        <button type="submit">Add Company</button>
    </form>
</div>


    <div class="item-card-container">
        <% companies.forEach(function(company) { %>
            <div class="item-card">
    
                <div class="item-card-body">
                    <div class="item-card-data">
                        <div class="item-card-data-header">
                            <h3>
                                <%= company.name %>
                            </h3>
                        </div>
                        <div class="item-card-data-subheader">
                            <h5>
                                <a href="<%= company.main_url %>">
                                    <%= company.main_url %>
                                </a>
                            </h5>
                        </div>
    
                    </div>
    
                    <div class="item-card-main-image">
                        <img src="<%= company.logo %>" alt="">
                    </div>

                    <div class="company-actions">
                        <a href="/admin/manufacturer/<%= company.id %>/edit">Edit</a>
                        <a style="color: red;" href="/admin/manufacturer/<%= company.id %>/delete">Delete</a>
                    </div>
                </div>

            </div>
        <% }) %>
    </div>
</div>


    
<% } else { %>
    <%- include('../../partials/pages/404.ejs'); %>
    
<% } %>