<style>
    .input-form {
        width: 90%;
    }

    .input-form textarea {
        margin-bottom: 30px;
    }

    /*the container must be positioned relative:*/
    .custom-select {
        position: relative;
        font-family: Arial;
        width: 100%;
        margin-bottom: 20px;
    }

    .custom-select select {
        display: none;
        /*hide original SELECT element:*/
    }

    .select-selected {
        background-color: #ecf0f3;
        box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
        width: 70%;
        margin: 0 auto;
        border-radius: 8px;
        font-family: 'Poiret One', cursive;
    }

    /*style the arrow inside the select element:*/
    .select-selected:after {
        position: absolute;
        content: "";
        top: 40%;
        right: 15%;
        width: 0;
        height: 0;
        border: 6px solid transparent;
        border-color: rgba(235, 89, 57, 1) transparent transparent transparent;
    }

    /*point the arrow upwards when the select box is open (active):*/
    .select-selected.select-arrow-active:after {
        border-color: transparent transparent rgba(235, 89, 57, 1) transparent;
        top: 7px;
    }

    /*style the items (options), including the selected item:*/
    .select-items div,
    .select-selected {
        padding: 8px 16px;
        font-weight: lighter;
        cursor: pointer;
        user-select: none;
    }


    /*style items (options):*/
    .select-items {
        position: absolute;
        background-color: #ecf0f3;
        font-family: 'Poiret One', cursive;
        box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff;
        top: 45px;
        left: 5%;
        right: 5%;
        z-index: 99;
        border-radius: 8px;
        height: 200px;
        max-height: 200px;
        overflow: hidden;
        overflow-y: scroll;
    }

    .select-items:first-of-type {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .select-items:last-of-type {
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    /*hide the items when the select box is closed:*/
    .select-hide {
        display: none;
    }

    .same-as-selected {
        background: rgba(235, 89, 57, 1);
        border-radius: none;
    }

    .select-items div:hover,
    .same-as-selected {
        background: rgba(235, 89, 57, 1);
        color: #fff;
        border-radius: 0;
    }

    .contact-data-container {
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        text-align: center;
    }

    .contact-data-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: start;
        width: 100%;
    }

    .contact-item {
        padding: 10px;
        display: flex;
        width: 90%;
        flex-direction: row;
        align-items: center;
        justify-content: start;
    }

    .contact-item i {
        color: #555;
        font-size: 1.5rem;
        margin-left: 20px;
        margin-right: 20px;
    }

    .contact-item a {
        text-decoration: none;
        color: rgba(235, 89, 57, 1);
        font-size: 1.3rem;
    }
    .delete-button {
        width: 50%;
        margin: 0 auto;
        text-align: center;
        padding: 10px;
    }
    .delete-button a {
        color: red;
        font-size: 1.5rem;
        padding: 10px;
        text-align: center;
        width: 100%;
        text-decoration: none;
    }



@media screen and (orientation : landscape) {
    #walkthrough {
        display: none;
    }
}
</style>
