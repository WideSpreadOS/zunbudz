        position: relative;
    }

    .toast-copied-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 16px;
        margin: 0 auto;
        padding: 12px;
        margin-bottom: 10px;
        text-align: center;
        background-color: #ecf0f3;
        box-shadow: inset 4px 4px 6px #cbced1, inset -4px -4px 6px #ffffff, 0 0 10px #fff;
    }

    .toast-copied {
        border-radius: 16px;
        box-shadow: 4px 4px 6px #cbced1, -4px -4px 6px #ffffff, inset 0 0 15px #fff;
        width: 70%;
        margin: 0 auto;
        padding: 10px;
        height: 70px;
        margin-bottom: 20px;
        text-align: center;
        text-shadow: 0 0 2px #fff;

    }

    .toast-copied input {
        display: none;
    }

    .palette {
        width: 90%;
        height: 30px;
        max-width: 90%;
        background-color: #ecf0f3;
        position: relative;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: flex-start;
        padding: 10px;
        border-radius: 16px;
        margin: 0 auto;
        overflow-x: scroll;
        overflow-y: hidden;

        box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15),
            -7px -7px 20px rgba(255, 255, 255, 1),
            inset 0px 0px 4px rgba(255, 255, 255, 0.2),
            inset 7px 7px 15px rgba(55, 84, 170, 0),
            inset -7px -7px 20px rgba(255, 255, 255, 0),
            0px 0px 4px rgba(255, 255, 255, 0) !important;
    }

    .a_palette_color {
        width: 20px;
        height: 20px;
        background: red;
        display: inline-block;
        margin: 14px;
        border-radius: 5%;
        box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15),
            -7px -7px 20px rgba(255, 255, 255, 1),
            inset 0px 0px 4px rgba(255, 255, 255, 0.2),
            inset 7px 7px 15px rgba(55, 84, 170, 0),
            inset -7px -7px 20px rgba(255, 255, 255, 0),
            0px 0px 4px rgba(255, 255, 255, 0) !important;
        cursor: pointer;
        border-radius: 50%;
    }

