<style>
    #coreMenu {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 65px;
        box-shadow: 0 6px 5px rgba(0, 0, 0, 0.25);
        border-bottom: outset 1px rgba(255, 255, 255, 0.75);
        background: #ecf0f3;
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-between;
        z-index: 99996;


    }

    #coreMenu span {
        color: rgba(135, 206, 250, 0.25);
        width: 50px;
        height: 30px;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
    }

    #coreMenu i {
        text-shadow: 0 0 2px rgba(255, 255, 255, 0.25);
        color: lightskyblue;
        font-size: 1.3rem;
    }
 

  

    .overlay {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 99950;
        top: 0;
        left: 0;
        bottom: 0;
        overflow-x: hidden;
        transition: 0.5s;
    }

    .overlay-content {
        position: relative;
        top: 25%;
        width: 100%;
        text-align: center;
    }
    
    .overlay p {
        text-decoration: none;
        font-size: 1.5rem;
        font-family: 'Rock Salt', cursive;
        color: lightskyblue;
        text-shadow: 0 0 5px rgba(127, 198, 241, 0.5);
        display: block;
        transition: ease-in 0.5s;
        
    }
    .overlay a {
        padding: 5px;
        text-decoration: none;
        font-size: 1.5rem;
        font-family: 'Rock Salt', cursive;
        color: lightskyblue;
        text-shadow: 0 0 5px rgba(127, 198, 241, 0.5);
        display: block;
        transition: ease-in 0.5s;
    }

    .overlay a:hover,
    .overlay a:focus {
        color: rgba(0, 0, 0, 0.5);
        text-shadow: 0 0 8px rgba(135, 206, 250, 0.75);
        transition: ease-in 0.5s;
    }

    .overlay .closebtn {
        position: absolute;
        top: 45px;
        right: 20px;
        font-size: 2rem;
        z-index: 99940;
        padding: 8px;
        font-size: 2.2rem;
    }
    
@media screen and (orientation : landscape) {
    #coreMenu {
        width: 100px;
        right: 85%;
        box-shadow: none;
        backdrop-filter: blur(0);
        border-bottom: none;
    }
    .site-logo {
        display: none;
    }

}
</style>



<div id="rootNav" class="overlay">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div id="mainMenu">
        <%- include('./menus/main'); %>
    </div>
</div>

<div class="landscape-header-logo">
    <div class="landscape-nav-logo-under">
        <img src="/images/logo_1a1a1c.png" alt="">
    </div>
    <div class="splitter-bar-lower"></div>
    <div class="splitter-bar"></div>
    <div class="core-menu-container">
    </div>
        <div class="landscape-nav-logo">
                <img src="/images/logo_1a1a1c.png" alt="">
        </div>
    </div>
    <div id="coreMenu">

        <span onclick="openNav()"><i id="open" class="fa-solid fa-bars"></i></span>
        <div class="site-logo">
            <img src="/images/logo_1a1a1c.png" alt="">
        </div>
        
    </div>



<script>
    function openNav() {
        document.getElementById("rootNav").style.width = "100%";
        document.getElementById("open").style.opacity = 0;
    }

    function closeNav() {
        document.getElementById("rootNav").style.width = "0%";
        document.getElementById("open").style.opacity = 1;
    }
</script>



